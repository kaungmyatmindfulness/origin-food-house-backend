# =============================================================================
# Origin Food House Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# Database Configuration
# =============================================================================
# For local development (without Docker):
DATABASE_URL="postgresql://myuser:mypassword@localhost:5432/mydb"

# For Docker development, use 'postgres' as hostname:
# DATABASE_URL="postgresql://myuser:mypassword@postgres:5432/mydb"

# Individual PostgreSQL settings (used by docker-compose)
POSTGRES_USER="myuser"
POSTGRES_PASSWORD="mypassword"
POSTGRES_DB="mydb"
POSTGRES_PORT=5432

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV="development"
PORT=3000
APP_PORT=3000

# Debug port for Node.js debugger (used in development)
DEBUG_PORT=9229

# =============================================================================
# JWT Configuration
# =============================================================================
# IMPORTANT: Change these secrets in production!
# Generate secure secrets using: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGIN="http://localhost:3001,http://localhost:3002"

# =============================================================================
# Redis Configuration (Optional - for caching/sessions)
# =============================================================================
# For local development:
# REDIS_HOST="localhost"
# For Docker development:
# REDIS_HOST="redis"
REDIS_PORT=6379
# REDIS_PASSWORD=""
# REDIS_URL="redis://localhost:6379"

# =============================================================================
# AWS S3 Configuration (Optional - for file uploads)
# =============================================================================
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-bucket-name"

# =============================================================================
# Email Configuration (Optional - for notifications)
# =============================================================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# EMAIL_FROM="noreply@yourapp.com"

# =============================================================================
# Session Configuration (Optional)
# =============================================================================
# SESSION_SECRET="your-session-secret"

# =============================================================================
# Rate Limiting Configuration (Optional)
# =============================================================================
# Requests per time window
# THROTTLE_TTL=60
# THROTTLE_LIMIT=10

# =============================================================================
# File Upload Configuration (Optional)
# =============================================================================
# MAX_FILE_SIZE=5242880  # 5MB in bytes
# UPLOAD_PATH="./uploads"

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================
# LOG_LEVEL="info"  # error, warn, info, debug
# LOG_FORMAT="json"  # json or pretty

# =============================================================================
# Docker Configuration (for docker-compose overrides)
# =============================================================================
# These are used by docker-compose files to customize container settings
# Uncomment and modify as needed

# Container resource limits (production)
# DOCKER_APP_CPU_LIMIT="2"
# DOCKER_APP_MEMORY_LIMIT="2G"
# DOCKER_POSTGRES_CPU_LIMIT="2"
# DOCKER_POSTGRES_MEMORY_LIMIT="1G"
